
@page 
@model Basic.UI.Pages.Employees.CreateModel
@{
    ViewData["Title"] = "Add Employee";
}

<h3>Add New Employee</h3>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger")">
        @Model.Message
    </div>
}

<form method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" id="Name" class="form-control" asp-for="@Model.Employee.Name" />
    </div>
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" id="Address" class="form-control" asp-for="@Model.Employee.Address" />
    </div>
    <div class="form-group">
        <label for="Phone">Phone</label>
        <input type="text" id="Phone" class="form-control" asp-for="@Model.Employee.Phone" />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" id="Email" class="form-control" asp-for="@Model.Employee.Email" />
    </div>
    <div class="form-group">
        <label for="Company">Company</label>
        <select id="Company" class="form-control" asp-for="Employee.Company">
            <option value="">-- Select a company --</option>
            @foreach (var company in Model.Companies)
            {
                <option value="@company.Code">@company.Name</option>
            }
        </select>
    </div>
    <br />
    <div>
        <button type="submit" class="btn btn-primary">Add Employee</button>
    </div>
</form>
