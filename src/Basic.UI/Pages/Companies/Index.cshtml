@page
@model Basic.UI.Pages.Companies.IndexModel
@{
    ViewData["Title"] = "Company";
}

<h2>Company List</h2>

@if (Model.Companies != null && Model.Companies.Count() > 0)
{
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model.Companies)
        {
            <tr>
                <td>@company.Code</td>
                <td>@company.Name</td>
                <td>
                    <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this company?');">
                        <input type="hidden" name="codeOrName" value="@company.Code" />
                        @* <button type="submit" name="action" value="edit" class="btn btn-primary">Edit</button> *@
                        <button type="submit" name="action" value="delete" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>
}
else
{
    <p>No data found !! </p>
}

<a asp-page="./Create" class="btn btn-primary">Add New Company</a>
